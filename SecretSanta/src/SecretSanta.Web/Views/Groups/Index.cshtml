<section class="flex flex-wrap mb-6" x-data="SecretSanta.setupGroups()" x-init="mounted()">
    <template x-for="(currentGroup, index) in groups" :key="index">
        <section class="w-full md:w-1/3 sm:w-1/3">
            <a :href="`https://localhost:5001/groups/edit/${currentGroup.id}`">
                <section class="border-baby-blue-darker shadow-sm hover:shadow-xl border-2 p-6 m-5 bg-baby-blue-dumb-light rounded-xl justify-between">
                    <div class="grid grid-cols-2 font-light text-lg ">
                        <span x-text="currentGroup.name"></span>
                        <span x-text="currentGroup.time"></span>
                    </div>
                    <div class="font-light text-lg">
                        <span x-text="currentGroup.location"></span>
                        <br>
                        <span x-text="currentGroup.date"></span>
                        <button class="-mt-6" @@click.prevent="deleteGroup(currentGroup)">
                            <i class="fas fa-trash text-gray-700 hover:text-red-700 ml-2"></i>
                        </button>
                    </div>
                </section>
            </a>
        </section>
    </template>
</section>
<a class="ml-4 border-2  bg-baby-blue-lighter hover:bg-baby-blue-dark  py-2 px-4 rounded-xl" asp-action="Create">Create Group</a>