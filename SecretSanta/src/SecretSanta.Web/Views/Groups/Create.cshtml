<section x-data="SecretSanta.createOrUpdateGroup()">
    @await Html.PartialAsync("_CreateOrEdit")
    <button class="border-2 bg-baby-blue-lighter hover:bg-baby-blue-dark py-2 px-4 rounded-xl mr-3" @@click="create()">Create</button>
    <a class="inline-block border-2 bg-white border-baby-blue-lighter hover:bg-baby-blue-dark py-2 px-4 rounded-xl" asp-controller="Groups" asp-action="Index">Cancel</a>
</section>